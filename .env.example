# Environment Variables for Crypto Foresight

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# Market Data Settings
MARKET_DATA_PROVIDER=coingecko
MARKET_DATA_CACHE_TTL=300

# Model Training
DEFAULT_HORIZON=7
DEFAULT_SEASONALITY=weekly
DEFAULT_CHANGEPOINT_PRIOR=0.05
DEFAULT_N_ITER=1000

# Paths
ARTIFACTS_PATH=./backend/artifacts
CONFIG_PATH=./config

# Optional: External API Keys (if using paid services)
# COINGECKO_API_KEY=your_api_key_here
# ALPHA_VANTAGE_API_KEY=your_api_key_here
